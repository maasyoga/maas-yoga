FROM node:16
WORKDIR /app
COPY package.json .
RUN npm install && npm install -g nodemon;
ENV BACKEND_PORT 3000
ENV ALLOWED_ORIGINS *
ENV USE_SSL_CERTIFICATE false
ENV BACKEND_TOKEN_SECRET 123
ENV BACKEND_TOKEN_EXPIRATION_TIME_MILISECONDS 86400
ENV BACKEND_SSL_DB_CONNECTION true
EXPOSE $BACKEND_PORT
ENTRYPOINT [ "nodemon", "--inspect=0.0.0.0", "--legacy-watch", "./index.js" ]